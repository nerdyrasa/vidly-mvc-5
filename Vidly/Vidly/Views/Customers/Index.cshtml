@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<p>Just checking to see that everything is hooked up correctly.</p>

@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else
{
    <p>List customers here.</p>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Membership Type</th>
            </tr>
        </thead>
        <tr>
            <td>Customer name goes here.</td>
            <td>Membership type goes here.</td>
        </tr>
    </table>
}